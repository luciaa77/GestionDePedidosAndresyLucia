<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="my_eshop">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.my_shop.myShop.Persona</class>
        <class>com.my_shop.myShop.InfoFiscal</class>
        <class>com.my_shop.myShop.Articulo</class>
        <class>com.my_shop.myShop.Compra</class>
        <class>com.my_shop.myShop.LineaCompra</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.mariadb.jdbc.Driver" />

            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mariadb://localhost:3307/my_eshop" />

            <property name="jakarta.persistence.jdbc.user"
                      value="root" />

            <property name="jakarta.persistence.jdbc.password"
                      value="Abcd1234" />

            <property name="hibernate.hbm2ddl.auto" value="none" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>

</persistence>
